#include "Enemy.h"

/**
 * todo
 */
Enemy::Enemy() {
	//
	this->xPos = 50;
	this->yPos = 50;
	this->width = 100;
	this->height = 100;
}

/**
 *
 */
void Enemy::render(u8 *frame) {
	//
	for (int xcoi = 0; xcoi < this->width*3; xcoi += 3) {
		//
		int addr = xcoi;

		//
		for (int ycoi = 0; ycoi < this->height; ycoi++) {
			//
			frame[addr + 0] = 0;	// G
			frame[addr + 1] = 255;	// B
			frame[addr + 2] = 0;	// R
		}

		//
		addr += (1920 * 3);
	}
}
