#include "xil_types.h"
#include "../Renderer/Renderer.h"

#ifndef SRC_OBJECT_OBJECT_H_
#define SRC_OBJECT_OBJECT_H_

class GameObject {
	public:
		// Positions
		u32 xPos = 0;
		u32 yPos = 0;

		// Sizes
		u32 width = 0;
		u32 height = 0;

		// Constructors
		GameObject();
		GameObject(u32 x, u32 y, u32 width, u32 height);

		// Renderer
		void paint(Renderer *renderer, u8 *frame);
		void depaint(Renderer *renderer, u8 *frame);
};

#endif
