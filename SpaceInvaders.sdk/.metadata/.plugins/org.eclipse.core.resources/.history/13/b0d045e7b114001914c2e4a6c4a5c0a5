#include "xil_types.h"

#ifndef SRC_GAMEOBJECT_H_
#define SRC_GAMEOBJECT_H_

#define STRIDE (1920 * 3)

class GameObject {
	public:
		// Position parameters.
		u32 xPos = 0;
		u32 yPos = 0;
		u32 pastX = 0;
		u32 pastY = 0;

		// Size parameters.
		int width = 0;
		int height = 0;

		// Abstract render function.
		virtual void render(u8 *frame) = 0;
};

#endif
