#include "Scene.h"

/**
 * todo
 */
Scene::Scene() {
	//
}

/**
 * todo
 */
void Scene::render(u8 *frame) {
	// Return out if should not render.
	if (! this->shouldRender) {
		return;
	}

	// Render the background scene.
	for (int xcoi = 0; xcoi < this->width*3; xcoi += 3) {
		// Define the current address.
		int addr = xcoi;

		// Loop through the scene height.
		for (int ycoi = 0; ycoi < this->height; ycoi++) {
			// Set the frame to black.
			frame[addr + 0] = 0;	// G
			frame[addr + 1] = 0;	// B
			frame[addr + 2] = 0;	// R
		}

		// Jump to next line.
		addr += STRIDE;
	}

	// Disable upcoming renders.
	this->shouldRender = 0;
}
